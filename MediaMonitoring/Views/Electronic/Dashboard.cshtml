
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutElectronic.cshtml";
    var styles = new List<string>();
}

<!-- Content Row -->

<div class="row">

    <!-- Area Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="row">
            <div class="row dimola mx-3">
                <div class="col-lg-9 col-md-9 col-sm-12 ">
                    <h3 class="pt-4 pl-4 text-black">Hi, @ViewBag.User</h3>
                    <p class="px-4 text-black">Welcome back. An overview of all advertisers and media activities has been gathered for you.</p>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 ">
                    <img class="hvr-icon" src="~/img/media-monitor/main/protest.svg" style="width:136px; height: 130px;">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 my-4">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center p-4">
                            <span class="bg-speaker p-3 rounded-circle"><img class="hvr-icon" src="~/img/media-monitor/main/megaphone.svg" style="width:30px; height: 45px;"></span>
                        </div>
                        <h2 class="text-black my-4 text-center"><b>₦ @ViewBag.TotalSpend</b></h2>
                        <h5 class="card-text text-center pb-4
                    ">
                            Total Adspend
                        </h5>
                        <p class="text-black my-4 text-center pt-3 text-green"><b><i class="fas fa-chevron-up pr-2"></i>50.5%</b></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8  my-4">
                <div class="card mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header d-flex flex-row align-items-center justify-content-between bg-white">
                        <h6 class="m-0 font-weight-bold bg-white text-black">Adspend Breakdown</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                This year<i class="fas fa-chevron-down px-2"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right animated--fade-in dropme" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">This Month</a>
                                <a class="dropdown-item" href="#">Last Month</a>
                                <a class="dropdown-item" href="#">This year</a>
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body row">
                        <div class="chart-pie col-lg-6 col-md-6 col-sm-12">
                            <canvas id="myPieChart"></canvas>
                        </div>
                        <div class="mt-4 text-center small  col-lg-6 col-md-6 col-sm-12">
                            @if (ViewBag.CategorySpend != null)
                            {
                                foreach (var item in ViewBag.CategorySpend)
                                {
                                    <div class="row px-2 pb-3">
                                        <div class="col-lg-2 col-md-2 col-sm-2 @item.Style"></div>
                                        <div class="col-lg-10 col-md-10 col-sm-10 pt-1 text-black"><h6><b>@item.Brand</b></h6></div>
                                    </div>
                                    styles.Add(item.Colors);
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Pie Chart -->
    <div class="col-xl-4 col-lg-5">
        <div class="card pb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header d-flex flex-row align-items-center justify-content-between bg-white">
                <h6 class="m-0 font-weight-bold bg-white text-black">Top Advertisers</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        This year<i class="fas fa-chevron-down pl-2"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right animated--fade-in dropme1" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">This Month</a>
                        <a class="dropdown-item" href="#">Last Month</a>
                        <a class="dropdown-item" href="#">This year</a>
                    </div>
                </div>
            </div>
            <!-- Card Body -->
            <div class="card-body row" id="topSpend">
                @if (ViewBag.TopSpends != null)
                {
                    var i = 1;
                    foreach (var item in ViewBag.TopSpends)
                    {
                        <div class="col-lg-7 col-md-7 col-sm-8 pb-4">
                            <h6 class="text-black">@i.<b class="pl-1"> @item.Advertiser</b></h6>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <h6 class="text-black"><b>₦@item.Value</b></h6>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-1">
                            <img src="~/img/media-monitor/growth.svg">
                        </div>
                        i++;
                    }
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header d-flex flex-row justify-content-between bg-white">
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle bar" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Top Television Advertisers<i class="fas fa-chevron-down pl-2"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right animated-fade-in dropthem" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">Top Television Advertisers</a>
                        <a class="dropdown-item" href="#">Top Radio Advertisers</a>
                        <a class="dropdown-item" href="#">Top Press Advertisers</a>
                        <a class="dropdown-item" href="#">Top Outdoor Advertisers</a>
                    </div>
                </div>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        This year<i class="fas fa-chevron-down pl-2"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right animated--fade-in dropme2" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">This Month</a>
                        <a class="dropdown-item" href="#">Last Month</a>
                        <a class="dropdown-item" href="#">This year</a>
                    </div>
                </div>
            </div>
            <div class="card-body"><canvas id="myBarChart" width="100%" height="50"></canvas></div>
            <div class="card-footer small text-muted">Updates Everyday</div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        var lblArrays = @Html.Raw(Json.Serialize(ViewBag.Brands));
        var values = @Html.Raw(Json.Serialize(ViewBag.Values));
        var allStyles = @Html.Raw(Json.Serialize(styles));

        //backgroundColor: ['#2FAB26', '#C60607', '#FF5252', '#FFAB40', '#E26111'],

        Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
        Chart.defaults.global.defaultFontColor = '#858796';

        // Pie Chart Example
        var ctx = document.getElementById("myPieChart");
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: lblArrays,
                datasets: [{
                    data: values,
                    backgroundColor: allStyles,
                    hoverBackgroundColor: allStyles,
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 0,
                    yPadding: 0,
                    displayColors: false,
                    caretPadding: 0,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 40,
            },
        });
    </script>

    <script>
        var lblAdvertizers = @Html.Raw(Json.Serialize(ViewBag.Advertizers));
        var spots = @Html.Raw(Json.Serialize(ViewBag.Spots));

    Chart.defaults.global.defaultFontFamily = '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#292b2c';

    // Bar Chart Example
    var ctx = document.getElementById("myBarChart");
    var myLineChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: lblAdvertizers,
            datasets: [{
                label: "Spots",
                backgroundColor: "#00C3FF",
                borderColor: "rgba(2,117,216,1)",
                data: spots,
            }],
        },
        options: {
            scales: {
                xAxes: [{
                    time: {
                        unit: 'month'
                    },
                    gridLines: {
                        display: false
                    },
                    ticks: {
                        maxTicksLimit: 8
                    }
                }],
                yAxes: [{
                    ticks: {
                        min: 0,
                        max: 50000,
                        maxTicksLimit: 8
                    },
                    gridLines: {
                        display: true
                    }
                }],
            },
            legend: {
                display: false
            }
        }
    });
    </script>

    <script>
        $(document).ready(function () {
            $('.dropme1 a').on('click', function () {
                var txt = ($(this).text());
                $('#topSpend').html('');

                swal({
                    title: "Media Monitoring",
                    text: "Please Wait While Fetching Spend!!!",
                    icon: "info",
                    buttons: false
                });

                if (txt != null && txt != '') {
                    $.getJSON('@Url.Action("GetAdvertizerSpend")', { selection: txt },
                        function (depts) {
                            if (depts != null && !jQuery.isEmptyObject(depts)) {
                                var result = "";
                                $(depts).each(function (index, emp) {
                                    result += '<div class="col-lg-7 col-md-7 col-sm-8 pb-4"><h6 class="text-black">' + index + '. <b class="pl-1">' + emp.advertiser + '</b></h6></div><div class="col-lg-3 col-md-3 col-sm-3"><h6 class="text-black"><b>₦' + emp.value + '</b></h6></div><div class="col-lg-2 col-md-2 col-sm-1"><img src="~/img/media-monitor/growth.svg"></div>';
                                });
                                $('#topSpend').append(result);
                                swal.close();
                            } else {
                                swal('Unable to fetch Spend!!!');
                            };
                        }
                    );
                }
            });
        });
    </script>
}