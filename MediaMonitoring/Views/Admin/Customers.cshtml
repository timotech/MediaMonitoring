
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h3>All Customers</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Username</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.AllCustomers != null)
                        {
                            @foreach (var mat in ViewBag.AllCustomers)
                            {
                                <tr>
                                    <td>@mat.Email</td>
                                    <td>@mat.FirstName</td>
                                    <td>@mat.UserName</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

