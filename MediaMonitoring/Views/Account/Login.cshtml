@model MediaMonitoring.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/electronic/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container-fluid row">
        <div class="col-lg-6 col-md-6 col-sm-12 p-main ">
            <div class="pb-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="hvr-icon" src="~/img/logo/main-logo/logo.png" style="width:145px; height: 78px;">
                </a>
            </div>
            <div class="pb-3">
                <img class="hvr-icon" src="~/img/media-monitor/main.png" style="width:80%; height: 80%">
            </div>
            <div class="bg-default p-4">
                <p>We strive to provide you up-to-date media statistics to help guide your advertisement plan. Equipped with informative and reliable data, MMS allows you make more informed advert decisions.</p>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 bg-default p-main-2">
            <form asp-controller="Account" asp-action="Login" method="post">
                <h4 class="pb-4">Sign In</h4>
                <div class="input-group pr-4 my-default">
                    <div class="input-group-prepend">
                        <div class="input-group-text bg-white text-black"><img src="~/img/media-monitor/mail.svg"></div>
                    </div>
                    <input type="text" asp-for="Email" class="form-control border-left-0 text-black py-4" id="inlineFormInputGroup" placeholder="Email Address">
                </div>
                <div class="input-group pr-4 my-default">
                    <div class="input-group-prepend">
                        <div class="input-group-text border-right-0 bg-white text-black"><img src="~/img/media-monitor/lock.svg"></div>
                    </div>
                    <input type="Password" asp-for="Password" class="form-control border-left-0 border-right-0 text-black py-4" id="inlineFormInputGroup" placeholder="Password">
                    <div class="input-group-prepend">
                        <div class="input-group-text border-left-0 bg-white text-black"><img src="~/img/media-monitor/eye.svg"></div>
                    </div>
                </div>
                <div class="py-4"><a href="reset.html">Forgot Password?</a></div>
                <div class="button">
                    <button class="btn btn-default px-4 py-3" type="submit">Sign In<i class="fas fa-chevron-right pl-1"></i></button>
                </div>
            </form>
        </div>
    </div>

    <p class="text-black text-center mt-auto py-4">
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Condition</a> | <a asp-area="" asp-controller="Home" asp-action="Terms">Terms of Use</a>
    </p>
    <div class="text-default text-center my-3">
        <p>&copy; @DateTime.Now.Year, Media Monitoring Services Nig. LTD. All Rights Reserved.</p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
